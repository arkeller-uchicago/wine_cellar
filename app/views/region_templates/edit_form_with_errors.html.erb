<!-- Validation failure messages -->
<% if @region.errors.any? %>
  <% @region.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit region #<%= @region.id %>
</h1>

<hr>

<!-- Form region start -->
<form action="/update_region/<%= @region.id %>" method="post">
<!-- Form region end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @region.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update region
  </button>
</form>

<hr>

<a href="/regions">
  Go back
</a>
