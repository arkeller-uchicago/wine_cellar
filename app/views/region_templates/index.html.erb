<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All regions
    </h1>

    <a href="/regions/new" class="btn btn-block btn-outline-secondary">
      Add a new region
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "region_templates/regions_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @regions.each do |region| %>
      <tr>
        <!-- Display region.id start -->
        <td>
          <%= region.id %>
        </td>
        <!-- Display region.id end -->

        <!-- Display region.name start -->
        <td>
          <%= region.name %>
        </td>
        <!-- Display region.name end -->

        <!-- Display region.created_at start -->
        <td>
          <%= time_ago_in_words(region.created_at) %> ago
        </td>
        <!-- Display region.created_at end -->

        <!-- Display region.updated_at start -->
        <td>
          <%= time_ago_in_words(region.updated_at) %> ago
        </td>
        <!-- Display region.updated_at end -->

        <td>
          <a href="/regions/<%= region.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @regions, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
