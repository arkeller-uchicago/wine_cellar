<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Region #<%= @region.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/regions" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link region start -->
      <div class="col">
        <a href="/regions/<%= @region.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit region
        </a>
      </div>
      <!-- Edit link region end -->

      <!-- Delete link region start -->
      <div class="col">
        <a href="/delete_region/<%= @region.id %>" class="btn btn-block btn-outline-secondary">
          Delete region
        </a>
      </div>
      <!-- Delete link region end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @region.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@region.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@region.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

