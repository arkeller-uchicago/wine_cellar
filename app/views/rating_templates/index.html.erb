<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ratings
    </h1>

    <a href="/ratings/new" class="btn btn-block btn-outline-secondary">
      Add a new rating
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "rating_templates/ratings_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Wine
        </th>

        <th>
          Value
        </th>

        <th>
          Comment
        </th>

        <th>
          Vintage
        </th>

        <th>
          Size
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ratings.each do |rating| %>
      <tr>
        <td>
          <%= rating.id %>
        </td>

        <td>
          <% if rating.user.present? %>
            <a href="/users/<%= rating.user.id %>">
              <%= rating.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if rating.wine.present? %>
            <a href="/wines/<%= rating.wine.id %>">
              <%= rating.wine.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= rating.value %>
        </td>

        <td>
          <%= rating.comment %>
        </td>

        <td>
          <% if rating.vintage.present? %>
            <a href="/vintages/<%= rating.vintage.id %>">
              <%= rating.vintage.year %>
            </a>
          <% end %>
        </td>

        <td>
          <% if rating.size.present? %>
            <a href="/bottle_sizes/<%= rating.size.id %>">
              <%= rating.size.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(rating.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(rating.updated_at) %> ago
        </td>

        <td>
          <a href="/ratings/<%= rating.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ratings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
