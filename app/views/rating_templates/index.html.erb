<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All ratings
    </h1>

    <a href="/ratings/new" class="btn btn-block btn-outline-secondary">
      Add a new rating
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "rating_templates/ratings_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Wine
        </th>

        <th>
          Value
        </th>

        <th>
          Comment
        </th>

        <th>
          Vintage
        </th>

        <th>
          Size
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @ratings.each do |rating| %>
      <tr>
        <!-- Display rating.id start -->
        <td>
          <%= rating.id %>
        </td>
        <!-- Display rating.id end -->

        <!-- Display rating.user_id start -->
        <td>
          <% if rating.user.present? %>
            <a href="/users/<%= rating.user.id %>">
              <%= rating.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display rating.user_id end -->

        <!-- Display rating.wine_id start -->
        <td>
          <% if rating.wine.present? %>
            <a href="/wines/<%= rating.wine.id %>">
              <%= rating.wine.name %>
            </a>
          <% end %>
        </td>
        <!-- Display rating.wine_id end -->

        <!-- Display rating.value start -->
        <td>
          <%= rating.value %>
        </td>
        <!-- Display rating.value end -->

        <!-- Display rating.comment start -->
        <td>
          <%= rating.comment %>
        </td>
        <!-- Display rating.comment end -->

        <!-- Display rating.vintage_id start -->
        <td>
          <% if rating.vintage.present? %>
            <a href="/vintages/<%= rating.vintage.id %>">
              <%= rating.vintage.year %>
            </a>
          <% end %>
        </td>
        <!-- Display rating.vintage_id end -->

        <!-- Display rating.size_id start -->
        <td>
          <% if rating.size.present? %>
            <a href="/bottle_sizes/<%= rating.size.id %>">
              <%= rating.size.name %>
            </a>
          <% end %>
        </td>
        <!-- Display rating.size_id end -->

        <!-- Display rating.created_at start -->
        <td>
          <%= time_ago_in_words(rating.created_at) %> ago
        </td>
        <!-- Display rating.created_at end -->

        <!-- Display rating.updated_at start -->
        <td>
          <%= time_ago_in_words(rating.updated_at) %> ago
        </td>
        <!-- Display rating.updated_at end -->

        <td>
          <a href="/ratings/<%= rating.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @ratings, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
