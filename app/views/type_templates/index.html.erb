<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All types
    </h1>

    <a href="/types/new" class="btn btn-block btn-outline-secondary">
      Add a new type
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "type_templates/types_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @types.each do |type| %>
      <tr>
        <td>
          <%= type.id %>
        </td>

        <td>
          <%= type.name %>
        </td>

        <td>
          <%= time_ago_in_words(type.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(type.updated_at) %> ago
        </td>

        <td>
          <a href="/types/<%= type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @types, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
