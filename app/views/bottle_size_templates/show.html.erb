<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bottle size #<%= @bottle_size.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/bottle_sizes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/bottle_sizes/<%= @bottle_size.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit bottle size
        </a>
      </div>

      <div class="col">
        <a href="/delete_bottle_size/<%= @bottle_size.id %>" class="btn btn-block btn-outline-secondary">
          Delete bottle size
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @bottle_size.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bottle_size.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bottle_size.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bottle_size_templates/bottle_size_cellars" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "bottle_size_templates/bottle_size_ratings" %>
  </div>
</div>
