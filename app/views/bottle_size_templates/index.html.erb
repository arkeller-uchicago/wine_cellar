<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bottle sizes
    </h1>

    <a href="/bottle_sizes/new" class="btn btn-block btn-outline-secondary">
      Add a new bottle size
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bottle_sizes.each do |bottle_size| %>
      <tr>
        <!-- Display bottle_size.id start -->
        <td>
          <%= bottle_size.id %>
        </td>
        <!-- Display bottle_size.id end -->

        <!-- Display bottle_size.name start -->
        <td>
          <%= bottle_size.name %>
        </td>
        <!-- Display bottle_size.name end -->

        <!-- Display bottle_size.created_at start -->
        <td>
          <%= time_ago_in_words(bottle_size.created_at) %> ago
        </td>
        <!-- Display bottle_size.created_at end -->

        <!-- Display bottle_size.updated_at start -->
        <td>
          <%= time_ago_in_words(bottle_size.updated_at) %> ago
        </td>
        <!-- Display bottle_size.updated_at end -->

        <td>
          <a href="/bottle_sizes/<%= bottle_size.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
