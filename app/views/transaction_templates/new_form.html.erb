<h1>
  Add a new transaction
</h1>


<hr>

<form action="/create_transaction" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="negative">
    <input id="negative" class="form-check-input" name="negative" type="checkbox">
    <label for="negative" class="form-check-label">
      Negative
    </label>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create transaction
  </button>
</form>

<hr>

<a href="/transactions">
  Go back
</a>
