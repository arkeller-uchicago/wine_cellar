<!-- Validation failure messages -->
<% if @transaction.errors.any? %>
  <% @transaction.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit transaction #<%= @transaction.id %>
</h1>

<hr>

<!-- Form transaction start -->
<form action="/update_transaction/<%= @transaction.id %>" method="post">
<!-- Form transaction end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @transaction.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update transaction
  </button>
</form>

<hr>

<a href="/transactions">
  Go back
</a>
