<%= search_form_for @q, :class => collapse_search_form, :id => "cellars_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :trans_date, "Trans date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='trans_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :trans_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Trans date greater than or equal to", :data => {:target => '#trans_dategteqPicker'} %>
          <div class="input-group-append" data-target='#trans_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='trans_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :trans_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Trans date less than or equal to", :data => {:target => '#trans_datelteqPicker'} %>
          <div class="input-group-append" data-target='#trans_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#trans_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#trans_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#trans_dategteqPicker').on("dp.change", function (e) {
              $('#trans_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#trans_datelteqPicker').on("dp.change", function (e) {
              $('#trans_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :remark_cont, "Remark contains" %>
    <%= f.text_field :remark_cont, :class => "form-control", :placeholder => "Remark contains" %>
  </div>

  <div class="form-group">
    <%= f.label :amount, "Amount" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :amount_gteq, :class => "form-control", :placeholder => "Amount greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :amount_lteq, :class => "form-control", :placeholder => "Amount less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :wine_name_cont, "Wine name contains" %>
    <%= f.text_field :wine_name_cont, :class => "form-control", :placeholder => "Wine name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :year, "Vintage Year" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :vitage_year_gteq, :class => "form-control", :placeholder => "Vintage Year greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :vitage_year_lteq, :class => "form-control", :placeholder => "Vintage Year less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :size_name_cont, "BottleSize name contains" %>
    <%= f.text_field :size_name_cont, :class => "form-control", :placeholder => "BottleSize name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :transactions_name_cont, "Transaction name contains" %>
    <%= f.text_field :transactions_name_cont, :class => "form-control", :placeholder => "Transaction name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/cellars" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

