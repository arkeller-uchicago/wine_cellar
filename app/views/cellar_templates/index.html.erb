<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All cellars
    </h1>

    <a href="/cellars/new" class="btn btn-block btn-outline-secondary">
      Add a new cellar
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "cellar_templates/cellars_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Wine
        </th>

        <th>
          Transactions
        </th>

        <th>
          Amount
        </th>

        <th>
          Vitage
        </th>

        <th>
          Remark
        </th>

        <th>
          Size
        </th>

        <th>
          Trans date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @cellars.each do |cellar| %>
      <tr>
        <td>
          <%= cellar.id %>
        </td>

        <td>
          <% if cellar.user.present? %>
            <a href="/users/<%= cellar.user.id %>">
              <%= cellar.user.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if cellar.wine.present? %>
            <a href="/wines/<%= cellar.wine.id %>">
              <%= cellar.wine.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if cellar.transactions.present? %>
            <a href="/transactions/<%= cellar.transactions.id %>">
              <%= cellar.transactions.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= cellar.amount %>
        </td>

        <td>
          <% if cellar.vitage.present? %>
            <a href="/vintages/<%= cellar.vitage.id %>">
              <%= cellar.vitage.year %>
            </a>
          <% end %>
        </td>

        <td>
          <%= cellar.remark %>
        </td>

        <td>
          <% if cellar.size.present? %>
            <a href="/bottle_sizes/<%= cellar.size.id %>">
              <%= cellar.size.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= cellar.trans_date %>
        </td>

        <td>
          <%= time_ago_in_words(cellar.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(cellar.updated_at) %> ago
        </td>

        <td>
          <a href="/cellars/<%= cellar.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @cellars, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
