<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All producers
    </h1>

    <a href="/producers/new" class="btn btn-block btn-outline-secondary">
      Add a new producer
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @producers.each do |producer| %>
      <tr>
        <!-- Display producer.id start -->
        <td>
          <%= producer.id %>
        </td>
        <!-- Display producer.id end -->

        <!-- Display producer.name start -->
        <td>
          <%= producer.name %>
        </td>
        <!-- Display producer.name end -->

        <!-- Display producer.created_at start -->
        <td>
          <%= time_ago_in_words(producer.created_at) %> ago
        </td>
        <!-- Display producer.created_at end -->

        <!-- Display producer.updated_at start -->
        <td>
          <%= time_ago_in_words(producer.updated_at) %> ago
        </td>
        <!-- Display producer.updated_at end -->

        <td>
          <a href="/producers/<%= producer.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
