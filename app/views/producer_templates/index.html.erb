<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All producers
    </h1>

    <a href="/producers/new" class="btn btn-block btn-outline-secondary">
      Add a new producer
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "producer_templates/producers_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @producers.each do |producer| %>
      <tr>
        <td>
          <%= producer.id %>
        </td>

        <td>
          <%= producer.name %>
        </td>

        <td>
          <%= time_ago_in_words(producer.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(producer.updated_at) %> ago
        </td>

        <td>
          <a href="/producers/<%= producer.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @producers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
