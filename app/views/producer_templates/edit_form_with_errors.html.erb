<!-- Validation failure messages -->
<% if @producer.errors.any? %>
  <% @producer.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit producer #<%= @producer.id %>
</h1>

<hr>

<!-- Form producer start -->
<form action="/update_producer/<%= @producer.id %>" method="post">
<!-- Form producer end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @producer.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update producer
  </button>
</form>

<hr>

<a href="/producers">
  Go back
</a>
