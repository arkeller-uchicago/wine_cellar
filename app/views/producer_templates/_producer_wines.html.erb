<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Wines

    <a data-toggle="collapse" href="#producer_wines_new_form">
      Add wine
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @producer.wines.each do |wine| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/wines/<%= wine.id %>">
          <%= wine.name %>
        </a>

        <a href="/delete_wine_from_producer/<%= wine.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="producer_wines_new_form">
        <%= render partial: "producer_templates/producer_wines_new_form" %>
      </div>
    </div>

  </ul>
</div>
