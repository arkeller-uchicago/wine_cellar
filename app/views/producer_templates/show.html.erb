<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Producer #<%= @producer.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/producers" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link producer start -->
      <div class="col">
        <a href="/producers/<%= @producer.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit producer
        </a>
      </div>
      <!-- Edit link producer end -->

      <!-- Delete link producer start -->
      <div class="col">
        <a href="/delete_producer/<%= @producer.id %>" class="btn btn-block btn-outline-secondary">
          Delete producer
        </a>
      </div>
      <!-- Delete link producer end -->
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <!-- Display name start -->
      <dd>
        <%= @producer.name %>
      </dd>
      <!-- Display name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@producer.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@producer.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

