<!-- Validation failure messages -->
<% if @producer.present? %>
  <% if @producer.errors.any? %>
    <% @producer.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new producer
</h1>


<hr>

<!-- Form producer start -->
<form action="/create_producer" method="post">
<!-- Form producer end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @producer.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create producer
  </button>
</form>

<hr>

<a href="/producers">
  Go back
</a>
