<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All wines
    </h1>

    <a href="/wines/new" class="btn btn-block btn-outline-secondary">
      Add a new wine
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Bottle size
        </th>

        <th>
          Type
        </th>

        <th>
          Coutry
        </th>

        <th>
          Region
        </th>

        <th>
          Producer
        </th>

        <th>
          Picture
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @wines.each do |wine| %>
      <tr>
        <!-- Display wine.id start -->
        <td>
          <%= wine.id %>
        </td>
        <!-- Display wine.id end -->

        <!-- Display wine.name start -->
        <td>
          <%= wine.name %>
        </td>
        <!-- Display wine.name end -->

        <!-- Display wine.bottle_size_id start -->
        <td>
          <%= wine.bottle_size.name %>
        </td>
        <!-- Display wine.bottle_size_id end -->

        <!-- Display wine.type_id start -->
        <td>
          <%= wine.type.name %>
        </td>
        <!-- Display wine.type_id end -->

        <!-- Display wine.coutry_id start -->
        <td>
          <%= wine.coutry_id %>
        </td>
        <!-- Display wine.coutry_id end -->

        <!-- Display wine.region_id start -->
        <td>
          <%= wine.region_id %>
        </td>
        <!-- Display wine.region_id end -->

        <!-- Display wine.producer_id start -->
        <td>
          <%= wine.producer_id %>
        </td>
        <!-- Display wine.producer_id end -->

        <!-- Display wine.picture start -->
        <td>
          <img src='<%= wine.picture %>' class='img-fluid'>
        </td>
        <!-- Display wine.picture end -->

        <!-- Display wine.created_at start -->
        <td>
          <%= time_ago_in_words(wine.created_at) %> ago
        </td>
        <!-- Display wine.created_at end -->

        <!-- Display wine.updated_at start -->
        <td>
          <%= time_ago_in_words(wine.updated_at) %> ago
        </td>
        <!-- Display wine.updated_at end -->

        <td>
          <a href="/wines/<%= wine.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
