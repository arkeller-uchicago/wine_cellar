<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All wines
    </h1>

    <a href="/wines/new" class="btn btn-block btn-outline-secondary">
      Add a new wine
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "wine_templates/wines_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Type
        </th>

        <th>
          Coutry
        </th>

        <th>
          Region
        </th>

        <th>
          Producer
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @wines.each do |wine| %>
      <tr>
        <td>
          <%= wine.id %>
        </td>

        <td>
          <%= wine.name %>
        </td>

        <td>
          <% if wine.type.present? %>
            <a href="/types/<%= wine.type.id %>">
              <%= wine.type.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if wine.coutry.present? %>
            <a href="/countries/<%= wine.coutry.id %>">
              <%= wine.coutry.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if wine.region.present? %>
            <a href="/regions/<%= wine.region.id %>">
              <%= wine.region.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if wine.producer.present? %>
            <a href="/producers/<%= wine.producer.id %>">
              <%= wine.producer.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(wine.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(wine.updated_at) %> ago
        </td>

        <td>
          <a href="/wines/<%= wine.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @wines, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
