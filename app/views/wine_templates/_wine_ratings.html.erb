<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ratings

    <a data-toggle="collapse" href="#wine_ratings_new_form">
      Add rating
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @wine.ratings.each do |rating| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/ratings/<%= rating.id %>">
          <%= rating.value %>
        </a>

        <a href="/delete_rating_from_wine/<%= rating.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="wine_ratings_new_form">
        <%= render partial: "wine_templates/wine_ratings_new_form" %>
      </div>
    </div>

  </ul>
</div>
