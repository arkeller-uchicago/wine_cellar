<% if @wine.present? %>
  <% if @wine.errors.any? %>
    <% @wine.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new wine
</h1>


<hr>

<form action="/create_wine" method="post">

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @wine.name %>">
  </div>

  <div class="form-group">
    <label for="type_id">
      Type
    </label>

    <%= select_tag(:type_id, options_from_collection_for_select(Type.all, :id, :name, @wine.type_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="coutry_id">
      Coutry
    </label>

    <%= select_tag(:coutry_id, options_from_collection_for_select(Country.all, :id, :name, @wine.coutry_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="region_id">
      Region
    </label>

    <%= select_tag(:region_id, options_from_collection_for_select(Region.all, :id, :name, @wine.region_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="producer_id">
      Producer
    </label>

    <%= select_tag(:producer_id, options_from_collection_for_select(Producer.all, :id, :name, @wine.producer_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create wine
  </button>
</form>

<hr>

<a href="/wines">
  Go back
</a>
