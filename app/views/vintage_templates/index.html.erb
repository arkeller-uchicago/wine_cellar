<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All vintages
    </h1>

    <a href="/vintages/new" class="btn btn-block btn-outline-secondary">
      Add a new vintage
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Year
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @vintages.each do |vintage| %>
      <tr>
        <!-- Display vintage.id start -->
        <td>
          <%= vintage.id %>
        </td>
        <!-- Display vintage.id end -->

        <!-- Display vintage.year start -->
        <td>
          <%= vintage.year %>
        </td>
        <!-- Display vintage.year end -->

        <!-- Display vintage.created_at start -->
        <td>
          <%= time_ago_in_words(vintage.created_at) %> ago
        </td>
        <!-- Display vintage.created_at end -->

        <!-- Display vintage.updated_at start -->
        <td>
          <%= time_ago_in_words(vintage.updated_at) %> ago
        </td>
        <!-- Display vintage.updated_at end -->

        <td>
          <a href="/vintages/<%= vintage.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
