<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All vintages
    </h1>

    <a href="/vintages/new" class="btn btn-block btn-outline-secondary">
      Add a new vintage
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "vintage_templates/vintages_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Year
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @vintages.each do |vintage| %>
      <tr>
        <td>
          <%= vintage.id %>
        </td>

        <td>
          <%= vintage.year %>
        </td>

        <td>
          <%= time_ago_in_words(vintage.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(vintage.updated_at) %> ago
        </td>

        <td>
          <a href="/vintages/<%= vintage.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @vintages, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
